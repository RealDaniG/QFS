
[Unit]
Description=ATLAS v18 Backend
After=network.target

[Service]
Type=simple
User=atlas
WorkingDirectory=/opt/atlas/v13/atlas
Environment="PYTHONPATH=/opt/atlas/V13"
Environment="PORT=8000"
Environment="SESSION_SECRET=prod-secret-change-me"
ExecStart=/usr/bin/python3 src/main_minimal.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
